<Window x:Class="makeScheduleArr"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scheduler"
        mc:Ignorable="d"
        Title="시간표 만들기" Height="800" Width="1000" Background="White">
    <Grid Background="#FFEEEEEE">
        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="699*"/>
        </Grid.RowDefinitions>
        <Image HorizontalAlignment="Left" Height="15" Margin="10,10,0,0" VerticalAlignment="Top" Width="15" Source="imagesource/add.png" RenderOptions.BitmapScalingMode="HighQuality" MouseDown="Image_MouseDown"/>
        <ScrollViewer x:Name="scv" Grid.Row="1" Background="#FFEEEEEE">
            <WrapPanel x:Name="wp"/>
        </ScrollViewer>
        <Border BorderBrush="Black" BorderThickness="0" HorizontalAlignment="Right" Height="30" Margin="0,0,10,0" VerticalAlignment="Center" Width="70" CornerRadius="6" Background="#FF3B77F1" MouseDown="Border_MouseDown_1">
            <Label Content="확인" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontFamily="나눔스퀘어_ac" Padding="0" FontSize="14"/>
        </Border>
    </Grid>
</Window>
